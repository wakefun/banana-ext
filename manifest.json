{
  "manifest_version": 3,
  "name": "Banana AI Launcher",
  "version": "1.0",
  "description": "Floating banana button for AI studios",
  "permissions": ["notifications", "system.display", "storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://grok.x.ai/*",
    "https://www.deepseek.com/*",
    "https://chat.deepseek.com/*",
    "https://www.doubao.com/*",
    "https://console.cloud.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*",
        "https://grok.x.ai/*",
        "https://www.deepseek.com/*",
        "https://chat.deepseek.com/*",
        "https://www.doubao.com/*"
      ],
      "js": ["content_button.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://console.cloud.google.com/*"],
      "js": ["content_automation.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/banana-16.png",
    "48": "icons/banana-48.png",
    "128": "icons/banana-128.png"
  },
  "web_accessible_resources": [{
    "resources": ["icons/banana.svg"],
    "matches": ["https://chatgpt.com/*", "https://gemini.google.com/*", "https://grok.x.ai/*", "https://www.deepseek.com/*", "https://chat.deepseek.com/*", "https://www.doubao.com/*"]
  }]
}
